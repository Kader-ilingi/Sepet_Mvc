
@model List<ProductViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<section class="mt-2">
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h3>Son Eklenen Ürünler</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    @if (Model.Count > 0)
                    {
                        @foreach (var p in Model)
                        {
                            <div class="col-md-3">
                                <div class="card">
                                    <img src="https://developers.elementor.com/docs/assets/img/elementor-placeholder-image.png" class="card-img-top" alt="placeholder_image">
                                    <div class="card-body">
                                        <h5 class="card-title">@p.ProductName</h5>


                                        @if (p.CategoryName != null)
                                        {
                                            <p>@p.CategoryName</p>
                                        }
                                        else
                                        {
                                            <p>Tanımsız</p>
                                        }
                                        <h6>@p.UnitPrice ₺</h6>
                                        <a href="#" class="btn btn-primary">Add to cart</a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <h1>Herhangi bir ürün eklenmemiş</h1>
                    }

                </div>
            </div>
        </div>
    </div>
</section>
